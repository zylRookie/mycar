<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPriceOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px20dp"
            android:text="价格升" />

        <View style="@style/divide_style" />


        <TextView
            android:id="@+id/tvPriceUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px20dp"
            android:text="价格降" />

        <View style="@style/divide_style" />

        <TextView
            android:id="@+id/tvTimeOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px20dp"
            android:text="发布时间升" />

        <View style="@style/divide_style" />

        <TextView
            android:id="@+id/tvTimeUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px20dp"
            android:text="发布时间降" />

        <View style="@style/divide_style" />

        <TextView
            android:id="@+id/tvCarYearon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px20dp"
            android:text="车龄升" />

        <View style="@style/divide_style" />

        <TextView
            android:id="@+id/tvCarYearUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px20dp"
            android:text="车龄降" />

        <View style="@style/divide_style" />

    </LinearLayout>


</LinearLayout>