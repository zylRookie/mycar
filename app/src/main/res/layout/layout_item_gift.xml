<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/px10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/px10dp">

        <ImageView
            android:id="@+id/ivGift"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px300dp"
            android:scaleType="fitXY"
            android:src="@mipmap/jycar" />

        <TextView
            android:id="@+id/tvGiftTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px18dp"
            android:text="机油"
            android:textColor="@color/A333333"
            android:textSize="@dimen/px30dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/px18dp">

            <TextView
                android:id="@+id/tvGiftTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="2015年5月"
                android:textSize="@dimen/px24dp" />

            <TextView
                android:id="@+id/tvGiftMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/tvGiftTime"
                android:layout_toRightOf="@+id/tvGiftTime"
                android:gravity="right"
                android:text="300驹币"
                android:textColor="#FC3E32"
                android:textSize="@dimen/px34dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>