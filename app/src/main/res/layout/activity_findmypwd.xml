<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgregister"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="找回密码"
            android:textColor="@color/A0c59a3"
            android:textSize="@dimen/px42dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px70dp"
            android:layout_marginLeft="@dimen/px42dp"
            android:layout_marginRight="@dimen/px42dp"
            android:layout_marginTop="@dimen/px42dp"
            android:background="@mipmap/addtext"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px42dp"
                android:text="输入手机号："
                android:textColor="@color/A333333" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/A333333"
                android:textSize="@dimen/px24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px70dp"
            android:layout_marginLeft="@dimen/px42dp"
            android:layout_marginRight="@dimen/px42dp"
            android:layout_marginTop="@dimen/px20dp"
            android:background="@mipmap/addtext"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px42dp"
                android:text="输入验证码："
                android:textColor="@color/A333333" />

            <EditText
                android:id="@+id/etIdentifyCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/A333333"
                android:textSize="@dimen/px24dp" />

            <TextView
                android:id="@+id/tvGetIdentifyCode"
                android:layout_width="@dimen/px200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="text"
                android:text="获取验证码"
                android:textColor="@color/A145899" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px28dp">

            <CheckBox
                android:id="@+id/registerCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:button="@drawable/checkbox"
                android:checked="true"
                android:text="  继续操作表示同意《车汇宝注册协议》"
                android:textColor="@color/A0c59a3" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px70dp"
            android:layout_marginLeft="@dimen/px42dp"
            android:layout_marginRight="@dimen/px42dp"
            android:background="@drawable/button_select"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/px34dp" />
    </LinearLayout>


</LinearLayout>