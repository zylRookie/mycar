            app:riv_corner_radius="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/llLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px28dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMsgTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字你猜"
                    android:textColor="@color/A333333"
                    android:textSize="@dimen/px32dp" />

                <TextView
                    android:id="@+id/tvMsgContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px10dp"
                    android:ellipsize="end"
                    android:maxEms="12"
                    android:singleLine="true"
                    android:text="显示未读信息，最新互动交流动态"
                    android:textColor="@color/Aa9a9a9"
                    android:textSize="@dimen/px24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/llLeft"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMsgTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px28dp"
                    android:gravity="right"
                    android:text="2017/09/26"
                    android:textColor="@color/Aa9a9a9"
                    android:textSize="@dimen/px24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px40dp"
                    android:layout_marginRight="@dimen/px28dp"
                    android:layout_marginTop="@dimen/px10dp">

                    <TextView
                        android:id="@+id/tvMessageNum"
                        android:layout_width="@dimen/px28dp"
                        android:layout_height="@dimen/px28dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/px5dp"
                        android:background="@drawable/shape_circle_color_white"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/px16dp"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>


