<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115.87dp"
    android:background="@drawable/update_dialog_shape"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/boy"
        android:layout_width="match_parent"
        android:layout_height="57.375dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5.625dp"
            android:text="男"
            android:textColor="#333333"
            android:textSize="@dimen/px31dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/img_boy" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp"
        android:background="@color/divider_line_color" />

    <LinearLayout
        android:id="@+id/girl"
        android:layout_width="match_parent"
        android:layout_height="57.375dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5.625dp"
            android:text="女"
            android:textColor="#333333"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/img_girl" />


    </LinearLayout>
</LinearLayout>