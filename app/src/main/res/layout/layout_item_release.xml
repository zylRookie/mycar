<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/px20dp"
    android:layout_marginLeft="@dimen/px10dp"
    android:layout_marginRight="@dimen/px10dp"
    android:layout_marginTop="@dimen/px20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/px10dp">

        <ImageView
            android:id="@+id/ivCar"
            android:layout_width="@dimen/px250dp"
            android:layout_height="@dimen/px250dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/car" />

        <TextView
            android:id="@+id/tvOldGoodsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20dp"
            android:text="标志407 2.2 冠军限量版"
            android:textColor="@color/A333333"
            android:textSize="@dimen/px28dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2015年5月"
                android:textSize="@dimen/px24dp" />

            <TextView
                android:id="@+id/tvMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="7.8万"
                android:textColor="@color/A36617c"
                android:textSize="@dimen/px36dp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px28dp"
            android:layout_marginTop="@dimen/px60dp">

            <Button
                android:id="@+id/btnState"
                android:layout_width="@dimen/px120dp"
                android:layout_height="@dimen/px60dp"
                android:background="@drawable/selector_btn_bottom"
                android:textColor="@color/white"
                android:textSize="@dimen/px30dp" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="@dimen/px120dp"
                android:layout_height="@dimen/px60dp"
                android:layout_marginLeft="@dimen/px160dp"
                android:background="@drawable/selector_btn_bottom"
                android:text="修改"
                android:textColor="@color/white"
                android:textSize="@dimen/px30dp" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>