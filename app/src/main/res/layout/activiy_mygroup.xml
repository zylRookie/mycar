<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/flTwoCar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px40dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="已加入"
                android:textColor="@color/A36617c"
                android:textSize="@dimen/px32dp" />

            <TextView
                android:id="@+id/viewBlue"
                android:layout_width="@dimen/px90dp"
                android:layout_height="@dimen/px6dp"
                android:layout_gravity="center|bottom"
                android:background="@color/A15508a"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/flOldGoods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px40dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="未加入"
                android:textColor="@color/A36617c"
                android:textSize="@dimen/px32dp" />

            <TextView
                android:id="@+id/viewBlueTwo"
                android:layout_width="@dimen/px90dp"
                android:layout_height="@dimen/px6dp"
                android:layout_gravity="center|bottom"
                android:background="@color/A15508a"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>

    <View
        style="@style/divide_style"
        android:background="@color/AF3F3F3" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_myGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_myGroupTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">

        </android.support.v7.widget.RecyclerView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无数据" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>