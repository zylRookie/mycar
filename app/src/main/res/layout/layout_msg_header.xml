<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px46dp"
    android:background="@color/AF6F6F6">

    <ImageView
        android:id="@+id/ivGroup"
        android:src="@mipmap/newgroup"
        android:layout_marginLeft="@dimen/px28dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="群聊"
        android:layout_marginLeft="@dimen/px26dp"
        android:textSize="@dimen/px28dp"
        android:textColor="@color/A333333"
        android:layout_toEndOf="@+id/ivGroup"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivGroup" />


</RelativeLayout>