<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bglogin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/d_head" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/px120dp"
            android:layout_marginRight="@dimen/px120dp"
            android:background="@mipmap/bgedite"
            android:cursorVisible="true"
            android:drawableLeft="@mipmap/phone"
            android:drawablePadding="@dimen/px24dp"
            android:gravity="center_vertical"
            android:hint="请输入账号"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="10dp"
            android:textColor="@color/A135da4"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/px32dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20dp">

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/px120dp"
                android:layout_marginRight="@dimen/px120dp"
                android:layout_weight="1"
                android:background="@mipmap/bgedite"
                android:cursorVisible="true"
                android:drawableLeft="@mipmap/pwd"
                android:drawablePadding="@dimen/px24dp"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:padding="10dp"
                android:textColor="@color/A135da4"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/px32dp" />

            <!--<RelativeLayout-->
            <!--android:id="@+id/rl_pwd_delete"-->
            <!--android:layout_width="@dimen/px20dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="@dimen/px70dp"-->
            <!--android:gravity="center_vertical"-->
            <!--android:visibility="invisible">-->

            <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:src="@mipmap/delete_number" />-->
            <!--</RelativeLayout>-->

            <RelativeLayout
                android:id="@+id/rl_look"
                android:layout_width="@dimen/px60dp"
                android:layout_height="@dimen/px80dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px130dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/iv_not_look" />
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px120dp"
            android:layout_marginRight="@dimen/px120dp"
            android:layout_marginTop="@dimen/px28dp">

            <TextView
                android:id="@+id/tvForgotPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"
                android:textColor="@color/white"
                android:textSize="@dimen/px24dp" />

            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="账号注册"
                android:textColor="@color/white"
                android:textSize="@dimen/px24dp" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px120dp"
            android:layout_marginRight="@dimen/px120dp"
            android:background="@drawable/selector_btn_bottom"
            android:text="登    录"
            android:textColor="@color/white"
            android:textSize="@dimen/px42dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px120dp"
            android:layout_marginLeft="@dimen/px120dp"
            android:layout_marginRight="@dimen/px120dp">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="其他登录"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="@dimen/px26dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv"
                android:background="@color/white" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv"
                android:background="@color/white" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/wxLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/px60dp"
            android:src="@mipmap/wx" />
    </RelativeLayout>


</LinearLayout>